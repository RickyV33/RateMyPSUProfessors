{
  "name": "rmp-psu",
  "version": "1.0.0",
  "description": "An extension that grabs a professors ratings from RateMyProfessor.com and displays them as you search for classes.",
  "main": "extension.js",
  "scripts": {
    "build": "npm run build:main & npm run build:background",
    "build:main": "browserify src/extension.js -o app/dist/extension.js -t [ babelify --presets [ es2015 ] ]",
    "build:background": "browserify src/background.js -o app/dist/background.js -t [ babelify --presets [ es2015 ] ]",
    "watch-background": "watchify src/background.js -d -v -o app/dist/background.js -t [ babelify --presets [ es2015 ] ]",
    "watch-main" : "watchify src/extension.js -d -v -o app/dist/extension.js -t [ babelify --presets [ es2015 ] ]"
  },
  "author": "Ricardo Valencia",
  "license": "ISC",
  "dependencies": {
    "browser-request": "^0.3.3",
    "lodash": "^4.16.4",
    "request": "^2.75.0",
    "rmp-api": "^1.2.5"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "watchify": "^3.7.0",
    "eslint-config-semistandard": "^7.0.0",
    "eslint-config-standard": "^6.2.0",
    "semistandard": "^9.1.0"
  },
  "peerDependencies": {
    "eslint": "^3.8.1",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-react": "^6.4.1",
    "eslint-plugin-standard": "^2.0.1"
  }

}
