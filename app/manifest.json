{
  "manifest_version": 2,
  "name": "RMP-PSU",
  "version": "1.0",

  "author": "Ricardo Valencia",
  "description": "An extension that grabs a professors ratings from RateMyProfessor.com and displays them as you search for classes.",

  "permissions": [
    "https://banweb.pdx.edu/*",
    "http://www.ratemyprofessors.com/*",
    "tabs"
  ],
  "icons": { "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [ "https://banweb.pdx.edu/pls/oprd/bwskfcls.P_GetCrse" ],
      "js": ["dist/extension.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  }
}